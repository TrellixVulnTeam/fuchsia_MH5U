library fuchsia.kernel;

using zx;

/// Protocol for providing a `ZX_RSRC_KIND_SYSTEM` with base
/// `ZX_RSRC_SYSTEM_INFO_BASE`.
@discoverable
protocol InfoResource {
    /// Get a info resource handle as `info_resource`.
    Get() -> (resource struct {
        info_resource zx.handle:RESOURCE;
    });
};
