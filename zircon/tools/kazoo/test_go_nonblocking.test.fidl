library zx;

@transport("Syscall")
@no_protocol_prefix
protocol SpecialNonBlocking {
    // The go runtime needs these not to be marked nonblocking, even when tagged
    // blocking.
    @blocking
    FutexWait(struct {
        a uint32;
    }) -> (struct {
        status status;
    });

    @blocking
    Nanosleep(struct {
        a uint32;
    }) -> (struct {
        status status;
    });
};
