  fuzz_host = true
  cpp_fuzzers = [ ":cmdline-fuzzer" ]
}

cpp_fuzzer("cmdline-fuzzer") {
  sources = [ "cmdline_fuzzer.cc" ]
  deps = [ "//zircon/system/ulib/cmdline" ]
}
