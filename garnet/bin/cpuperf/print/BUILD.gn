import("//build/host.gni")

group("print") {
  testonly = true
  deps = [
    ":cpuperf_print",
    ":host_cpuperf_print",
    "tests",
  ]
}

# TODO(dje): At the moment it only runs on linux or macos.

executable("cpuperf_print") {
  sources = [
    "main.cc",
    "printer_config.cc",
    "printer_config.h",
    "raw_printer.cc",
    "raw_printer.h",
  ]

  deps = [
    "//garnet/bin/cpuperf:session_result_spec",
    "//garnet/lib/debugger_utils",
    "//garnet/lib/perfmon",
    "//src/lib/fxl",
  ]
}

install_host_tools("host_cpuperf_print") {
  deps = [ ":cpuperf_print" ]

  outputs = [ "cpuperf_print" ]
}
