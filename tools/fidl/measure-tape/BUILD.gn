import("//build/components.gni")

group("tests") {
  testonly = true
  deps = [
    ":integration-tests",
    "src:measure-tape_test($host_toolchain)",
  ]
}

fuchsia_unittest_component("rust-tests-comp") {
  deps = [ "rust-tests" ]
}

fuchsia_unittest_component("hlcpp-tests-comp") {
  deps = [ "hlcpp-tests" ]
}

fuchsia_test_package("integration-tests") {
  test_components = [
    ":rust-tests-comp",
    ":hlcpp-tests-comp",
  ]
}
