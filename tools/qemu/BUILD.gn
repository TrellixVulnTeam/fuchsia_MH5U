import("//build/go/go_library.gni")
import("//build/go/go_test.gni")

go_library("qemu") {
  sources = [
    "aemu.go",
    "aemu_test.go",
    "qemu.go",
    "qemu_test.go",
  ]
}

go_test("qemu_tests") {
  gopackages = [ "go.fuchsia.dev/fuchsia/tools/qemu" ]

  deps = [
    ":qemu",
    "//third_party/golibs:github.com/google/go-cmp",
  ]
}

group("tests") {
  testonly = true

  deps = [ ":qemu_tests" ]
}
