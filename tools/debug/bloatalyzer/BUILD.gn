import("//build/go/go_binary.gni")
import("//build/go/go_library.gni")

go_library("main") {
  source_dir = "cmd"
  sources = [ "main.go" ]
  deps = [
    "//tools/debug/bloaty",
    "//tools/lib/logger",
  ]
}

go_binary("bloatalyzer") {
  gopackage = "go.fuchsia.dev/fuchsia/tools/debug/bloatalyzer/cmd"
  deps = [ ":main" ]
}
