import("//build/config.gni")

group("a11y") {
  deps = [
    ":config",
    "bin/a11y_manager:a11y-manager",
    "lib",
  ]
}

group("tests") {
  testonly = true

  deps = [
    "bin/a11y_manager/tests",
    "bin/a11y_tts_log_engine/tests",
    "lib:tests",
  ]
}

config_data("config") {
  for_pkg = "sysmgr"
  outputs = [ "a11y.config" ]
  sources = [ "services.config" ]
}
