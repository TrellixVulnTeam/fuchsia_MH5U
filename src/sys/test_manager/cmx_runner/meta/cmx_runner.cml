{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/cmx_runner",
    },
    capabilities: [
        {
            runner: "cmx_runner",
            path: "/svc/fuchsia.component.runner.ComponentRunner",
        },
    ],
    use: [
        {
            protocol: [
                "fuchsia.sys.Environment",
                "fuchsia.sys.Loader",
            ],
        },
    ],
    expose: [
        {
            runner: "cmx_runner",
            from: "self",
        },
    ],
}
