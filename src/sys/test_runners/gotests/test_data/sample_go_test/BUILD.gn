import("//build/components.gni")
import("//build/go/go_library.gni")
import("//build/go/go_test.gni")

fuchsia_component("sample-go-test") {
  testonly = true
  manifest = "meta/sample_go_test.cml"
  component_name = "sample_go_test"
  deps = [ ":sample_go_test" ]
}

go_library("sample_go_test_lib") {
  name = "go.fuchsia.dev/fuchsia/src/sys/test_runners/gotests/test_data/sample_go_test"
  sources = [ "sample_go_test.go" ]
}

go_test("sample_go_test") {
  gopackages = [ "go.fuchsia.dev/fuchsia/src/sys/test_runners/gotests/test_data/sample_go_test" ]
  deps = [ ":sample_go_test_lib" ]
}
