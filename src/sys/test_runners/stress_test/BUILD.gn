import("//build/components.gni")
import("//build/rust/rustc_binary.gni")

rustc_binary("bin") {
  testonly = true
  name = "stress_test_runner"
  with_unit_tests = true
  edition = "2018"

  deps = [
    "//sdk/fidl/fuchsia.component:fuchsia.component-rustc",
    "//sdk/fidl/fuchsia.component.decl:fuchsia.component.decl-rustc",
    "//sdk/fidl/fuchsia.component.runner:fuchsia.component.runner-rustc",
    "//sdk/fidl/fuchsia.data:fuchsia.data-rustc",
    "//sdk/fidl/fuchsia.io:fuchsia.io-rustc",
    "//sdk/fidl/fuchsia.stresstest:fuchsia.stresstest-rustc",
    "//sdk/fidl/fuchsia.test:fuchsia.test-rustc",
    "//sdk/fidl/fuchsia.test:rust_measure_tape_for_case",
    "//src/lib/fidl/rust/fidl",
    "//src/lib/fuchsia",
    "//src/lib/fuchsia-async",
    "//src/lib/fuchsia-component",
    "//src/lib/fuchsia-runtime",
    "//src/lib/zircon/rust:fuchsia-zircon",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:async-trait",
    "//third_party/rust_crates:futures",
    "//third_party/rust_crates:log",
    "//third_party/rust_crates:rand",
  ]

  sources = [
    "src/main.rs",
    "src/test.rs",
  ]
}

fuchsia_component("stress-test-runner-cmp") {
  testonly = true
  manifest = "meta/stress-test-runner.cml"
  component_name = "stress-test-runner"
  deps = [ ":bin" ]
}

fuchsia_package("stress-test-runner") {
  testonly = true
  deps = [ ":stress-test-runner-cmp" ]
}

group("stress_test") {
  testonly = true
  deps = [ ":stress-test-runner" ]
}

group("tests") {
  testonly = true
  deps = [ "tests" ]
}
