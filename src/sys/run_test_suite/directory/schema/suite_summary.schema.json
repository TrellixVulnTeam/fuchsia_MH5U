{
    "$defs": {
        "artifact_metadata": {
            "description": "Metadata about an artifact",
            "properties": {
                "artifact_type": {
                    "description": "Semantic type of an artifact",
                    "enum": [
                        "SYSLOG",
                        "STDOUT",
                        "STDERR",
                        "CUSTOM",
                        "RESTRICTED_LOG",
                        "REPORT",
                        "DEBUG"
                    ]
                },
                "component_moniker": {
                    "description": "The moniker of the component in the test realm that produced the artifact",
                    "type": "string"
                }
            },
            "required": [
                "artifact_type"
            ]
        },
        "artifacts": {
            "description": "A mapping of known artifacts to metadata associated with each artifact.",
            "patternProperties": {
                "": {
                    "$ref": "#/$defs/artifact_metadata"
                }
            }
        },
        "caseEntry": {
            "additionalProperties": false,
            "properties": {
                "artifacts": {
                    "$ref": "#/$defs/artifacts"
                },
                "artifact_dir": {
                    "description": "Subdirectory containing all artifacts scoped to the test case.",
                    "type": "string"
                },
                "duration_milliseconds": {
                    "description": "Run duration in milliseconds",
                    "type": "integer"
                },
                "name": {
                    "description": "name of the test case",
                    "type": "string"
                },
                "outcome": {
                    "$ref": "#/$defs/outcome"
                },
                "start_time": {
                    "description": "Start time as milliseconds since the UNIX epoch",
                    "type": "integer"
                }
            },
            "required": [
                "outcome",
                "name"
            ]
        },
        "outcome": {
            "description": "The outcome scoped to a suite run or test case",
            "enum": [
                "NOT_STARTED",
                "PASSED",
                "FAILED",
                "INCONCLUSIVE",
                "TIMEDOUT",
                "ERROR",
                "SKIPPED"
            ],
            "type": "string"
        }
    },
    "$id": "https://fuchsia.dev/schema/src/sys/run_test_suite/directory/schema/suite_summary.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "description": "Format for the summary of a suite run in a fuchsia test output directory.",
    "properties": {
        "artifacts": {
            "$ref": "#/$defs/artifacts"
        },
        "artifact_dir": {
            "description": "Subdirectory containing all artifacts scoped to the suite.",
            "type": "string"
        },
        "cases": {
            "description": "list of test cases",
            "items": {
                "$ref": "#/$defs/caseEntry"
            },
            "type": "array"
        },
        "duration_milliseconds": {
            "description": "Run duration in milliseconds",
            "type": "integer"
        },
        "name": {
            "description": "name of the test suite",
            "type": "string"
        },
        "outcome": {
            "$ref": "#/$defs/outcome"
        },
        "start_time": {
            "description": "Start time as milliseconds since the UNIX epoch",
            "type": "integer"
        },
        "version": {
            "description": "Schema version",
            "enum": [
                "0"
            ],
            "type": "string"
        }
    },
    "required": [
        "outcome",
        "name",
        "cases",
        "version"
    ],
    "type": "object"
}
