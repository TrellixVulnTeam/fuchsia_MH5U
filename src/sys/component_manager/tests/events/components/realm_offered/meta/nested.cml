{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/realm_offered_nested",
    },
    children: [
        // Start immediately.
        {
            name: "reporter",
            url: "fuchsia-pkg://fuchsia.com/events_integration_test#meta/realm_offered_reporter.cm",
            startup: "eager",
        },

        // These childrens are started by the test once "reporter" has started.
        {
            name: "child_a",
            url: "fuchsia-pkg://fuchsia.com/events_integration_test#meta/stub_component.cm",
            startup: "lazy",
        },
        {
            name: "child_b",
            url: "fuchsia-pkg://fuchsia.com/events_integration_test#meta/stub_component.cm",
            startup: "lazy",
        },
        {
            name: "child_c",
            url: "fuchsia-pkg://fuchsia.com/events_integration_test#meta/stub_component.cm",
            startup: "lazy",
        },
    ],
    capabilities: [
        { protocol: "fidl.test.components.Trigger" },
    ],
    use: [
        {
            protocol: "fuchsia.component.Realm",
            from: "framework",
        },
    ],
    offer: [
        {
            protocol: "fuchsia.sys2.EventSource",
            from: "parent",
            to: "#reporter",
        },
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: "#reporter",
        },
        {
            protocol: "fidl.test.components.Trigger",
            from: "self",
            to: "#reporter",
        },
        {
            event: "started",
            from: "framework",
            as: "started_nested",
            to: "#reporter",
            modes: [ "async" ],
        },
    ],
}
