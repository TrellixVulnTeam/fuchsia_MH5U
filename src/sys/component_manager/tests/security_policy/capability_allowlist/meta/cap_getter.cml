{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/cap_getter_bin",
    },
    capabilities: [
        { protocol: "test.policy.Access" },
    ],
    use: [
        {
            protocol: [
                "test.policy.Restricted",
                "test.policy.Unrestricted",
            ],
        },
        {
            directory: "restricted",
            rights: [ "rw*" ],
            path: "/restricted",
        },
        {
            directory: "unrestricted",
            rights: [ "rw*" ],
            path: "/unrestricted",
        },
    ],
    expose: [
        {
            protocol: "test.policy.Access",
            from: "self",
        },
    ],
}
