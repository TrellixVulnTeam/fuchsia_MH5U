}

fuchsia_unittest_package("hub_integration_test") {
  manifest = "meta/hub_integration_test.cml"
  deps = [
    ":advanced_routing_echo_realm",
    ":advanced_routing_reporter",
    ":child",
    ":dynamic_child_reporter",
    ":grandchild",
    ":hub_client",
    ":hub_integration_test_bin",
