{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/universe_resolver",
    },
    capabilities: [
        {
            resolver: "full-resolver",
            path: "/svc/fuchsia.sys2.ComponentResolver",
        },
        {
            protocol: "fuchsia.sys2.ComponentResolver",
            path: "/svc/fuchsia.sys2.ComponentResolver",
        },
    ],
    use: [
        {
            protocol: [ "fuchsia.sys2.ComponentResolver" ],
        },
    ],
    expose: [
        {
            resolver: "full-resolver",
            from: "self",
        },
        {
            protocol: "fuchsia.sys2.ComponentResolver",
            from: "self",
        },
    ],
}
