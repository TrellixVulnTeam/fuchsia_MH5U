import("//build/rust/rustc_library.gni")

if (is_host) {
  rustc_library("ffx_daemon_protocol_diagnostics") {
    version = "0.1.0"
    edition = "2018"
    with_unit_tests = true

    deps = [
      "//sdk/fidl/fuchsia.developer.bridge:fuchsia.developer.bridge-rustc",
      "//src/developer/ffx/daemon/target:lib",
      "//src/developer/ffx/lib/diagnostics:lib",
      "//src/developer/ffx/lib/protocols:lib",
      "//src/developer/ffx/lib/tasks:lib",
      "//src/developer/ffx/lib/timeout:lib",
      "//src/lib/diagnostics/data/rust",
      "//src/lib/fidl/rust/fidl",
      "//src/lib/fuchsia-async",
      "//third_party/rust_crates:anyhow",
      "//third_party/rust_crates:async-trait",
      "//third_party/rust_crates:log",
    ]

    test_deps = [ "//sdk/fidl/fuchsia.developer.remotecontrol:fuchsia.developer.remotecontrol-rustc" ]

    sources = [ "src/lib.rs" ]
  }
}

group("tests") {
  testonly = true
  deps = [ ":ffx_daemon_protocol_diagnostics_test($host_toolchain)" ]
}
