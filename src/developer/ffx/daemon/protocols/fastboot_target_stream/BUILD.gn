import("//build/rust/rustc_library.gni")

if (is_host) {
  rustc_library("ffx_daemon_protocol_fastboot_target_stream") {
    version = "0.1.0"
    edition = "2018"
    with_unit_tests = true

    deps = [
      "//sdk/fidl/fuchsia.developer.bridge:fuchsia.developer.bridge-rustc",
      "//sdk/fidl/fuchsia.net:fuchsia.net-rustc",
      "//src/developer/ffx/daemon/target:lib",
      "//src/developer/ffx/lib/netext:lib",
      "//src/developer/ffx/lib/protocols:lib",
      "//src/developer/ffx/lib/stream_util:lib",
      "//src/lib/fidl/rust/fidl",
      "//src/lib/fuchsia-async",
      "//src/lib/mdns/rust:mdns",
      "//src/lib/network/packet",
      "//src/lib/zerocopy",
      "//third_party/rust_crates:anyhow",
      "//third_party/rust_crates:async-channel",
      "//third_party/rust_crates:async-io",
      "//third_party/rust_crates:async-lock",
      "//third_party/rust_crates:async-net",
      "//third_party/rust_crates:async-trait",
      "//third_party/rust_crates:futures",
      "//third_party/rust_crates:futures-lite",
      "//third_party/rust_crates:log",
      "//third_party/rust_crates:socket2",
    ]

    sources = [ "src/lib.rs" ]
  }
}

group("tests") {
  testonly = true
  deps = [ ":ffx_daemon_protocol_fastboot_target_stream_test($host_toolchain)" ]
}
