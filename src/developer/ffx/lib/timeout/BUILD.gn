import("//build/rust/rustc_library.gni")

rustc_library("lib") {
  name = "timeout"
  version = "0.1.0"
  edition = "2018"
  with_unit_tests = true
  sources = [ "src/lib.rs" ]
  deps = [
    "//src/lib/fuchsia-async",
    "//third_party/rust_crates:futures-lite",
    "//third_party/rust_crates:futures-util",
    "//third_party/rust_crates:thiserror",
  ]
}

group("tests") {
  testonly = true

  deps = [ ":lib_test" ]
}

group("timeout") {
  testonly = true

  deps = [
    ":lib",
    ":tests",
  ]
}
