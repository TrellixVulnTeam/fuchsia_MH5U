import("//build/components.gni")
import("//build/rust/rustc_binary.gni")

rustc_binary("bin") {
  name = "echo_client_sc"
  edition = "2018"
  deps = [
    ":config_lib",
    "//examples/components/routing/fidl:echo-rustc",
    "//src/lib/fuchsia",
    "//src/lib/fuchsia-component",
    "//third_party/rust_crates:anyhow",
  ]

  sources = [ "src/main.rs" ]
}

fuchsia_component_manifest("manifest") {
  component_name = "echo_client_sc"
  manifest = "meta/echo_client_sc.cml"
  restricted_features = [ "structured_config" ]
}

fuchsia_component("component") {
  cm_target = ":manifest"
  deps = [ ":bin" ]
}

fuchsia_structured_config_values("config_values") {
  values = "config/default.json5"
  cm_target = ":manifest"
}

fuchsia_structured_config_rust_lib("config_lib") {
  cm_target = ":manifest"
}

group("echo_client_sc") {
  deps = [
    ":component",
    ":config_values",
  ]
}
