import("//build/host.gni")
import("//build/rust/rustc_library.gni")

if (is_host) {
  rustc_library("fvm") {
    name = "assembly_fvm"
    version = "0.1.0"
    with_unit_tests = true
    deps = [
      "//src/lib/assembly/tool",
      "//src/lib/assembly/util",
      "//third_party/rust_crates:anyhow",
      "//third_party/rust_crates:serde",
    ]
    sources = [
      "src/fvm.rs",
      "src/lib.rs",
      "src/nand.rs",
    ]
  }

  group("host_tests") {
    testonly = true
    deps = [ ":fvm_test" ]
  }
}
