fuchsia_component("system_installer_bin_test") {
  testonly = true
  deps = [ ":bin_installer_test" ]
  manifest = "meta/system_installer_bin_test.cmx"
}

fuchsia_test_package("system_installer_tests") {
  test_components = [ ":system_installer_bin_test" ]
  deps = [
    ":recovery_logo",
