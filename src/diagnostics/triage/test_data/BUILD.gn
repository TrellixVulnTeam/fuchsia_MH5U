import("//src/diagnostics/triage/build/triage_config_test.gni")

group("test_data") {
  testonly = true
  deps = [ ":tests" ]
}

group("tests") {
  testonly = true
  deps = [ ":triage_sample_config_test($host_toolchain)" ]
}

if (is_host) {
  triage_config_test("triage_sample_config_test") {
    sources = [
      "annotation_tests.triage",
      "error_rate.triage",
      "log_tests.triage",
      "map_fold.triage",
      "other.triage",
      "sample.triage",
      "sample_tags.triage",
    ]
  }
}
