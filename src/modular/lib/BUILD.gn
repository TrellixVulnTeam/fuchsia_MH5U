import("//build/fidl/fidl.gni")
import("//build/fidl/toolchain.gni")

group("lib") {
  testonly = true
  deps = [
    ":just_fidl",
    ":services",
    "app_driver",
    "async",
    "base64url",
    "common",
    "fidl",
    "lifecycle",
    "pseudo_dir",
    "scoped_tmpfs",
    "session",
    "testing",
  ]
}

group("services") {
  deps = [ "//sdk/fidl/fuchsia.modular" ]
}

group("just_fidl") {
  deps = [ "//sdk/fidl/fuchsia.modular($fidl_toolchain)" ]
}

executable("modular_lib_unittests") {
  testonly = true

  deps = [
    "//src/lib/fxl/test:gtest_main",
    "//src/modular/lib/async/cpp:unittests",
    "//src/modular/lib/base64url:unittests",
    "//src/modular/lib/fidl:unittests",
    "//src/modular/lib/modular_config:unittests",
    "//src/modular/lib/modular_test_harness/cpp:unittests",
    "//src/modular/lib/pseudo_dir:unittests",
    "//src/modular/lib/scoped_tmpfs:unittests",
    "//src/modular/lib/session:unittests",
    "//src/modular/lib/string_escape:unittests",
  ]
}
