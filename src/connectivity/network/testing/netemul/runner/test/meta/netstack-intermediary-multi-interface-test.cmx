{
    "facets": {
        "fuchsia.netemul": {
            "capture": true,
            "default_url": "fuchsia-pkg://fuchsia.com/netemul-sandbox-test#meta/netstack-intermediary-test.cmx",
            "environment": {
                "children": [
                    {
                        "devices": [
                            "server-ep-1"
                        ],
                        "name": "server-1",
                        "test": [
                            {
                                "arguments": [
                                    "--server",
                                    "--endpoint_name=server-ep-1"
                                ]
                            }
                        ]
                    },
                    {
                        "devices": [
                            "server-ep-2"
                        ],
                        "name": "server-2",
                        "test": [
                            {
                                "arguments": [
                                    "--server",
                                    "--endpoint_name=server-ep-2"
                                ]
                            }
                        ]
                    },
                    {
                        "name": "client",
                        "services": {
                            "fuchsia.net.tun.Control": {
                                "url": "fuchsia-pkg://fuchsia.com/netemul-sandbox-test#meta/network-tun.cmx"
                            },
                            "fuchsia.net.virtualization.Control": {
                                "arguments": [
                                    "--interface=72:00:0a:0b:0c:0d=net-1",
                                    "--interface=72:00:01:02:03:04=net-2"
                                ],
                                "url": "fuchsia-pkg://fuchsia.com/netemul-sandbox-test#meta/netstack-intermediary.cmx"
                            },
                            "fuchsia.netstack.Netstack": {
                                "arguments": [
                                    "--interface=72:00:0a:0b:0c:0d=net-1",
                                    "--interface=72:00:01:02:03:04=net-2"
                                ],
                                "url": "fuchsia-pkg://fuchsia.com/netemul-sandbox-test#meta/netstack-intermediary.cmx"
                            }
                        },
                        "test": [
                            {
                                "arguments": [
                                    "--mock_guest",
                                    "--network_name=mock-guest-1",
                                    "--endpoint_name=client-ep-1",
                                    "--server_name=server-ep-1"
                                ]
                            },
                            {
                                "arguments": [
                                    "--mock_guest",
                                    "--network_name=mock-guest-2",
                                    "--endpoint_name=client-ep-2",
                                    "--server_name=server-ep-2"
                                ]
                            }
                        ]
                    }
                ]
            },
            "networks": [
                {
                    "endpoints": [
                        {
                            "name": "server-ep-1"
                        }
                    ],
                    "name": "net-1"
                },
                {
                    "endpoints": [
                        {
                            "name": "server-ep-2"
                        }
                    ],
                    "name": "net-2"
                },
                {
                    "endpoints": [
                        {
                            "mac": "72:00:01:02:03:04",
                            "name": "client-ep-2"
                        }
                    ],
                    "name": "mock-guest-2"
                },
                {
                    "endpoints": [
                        {
                            "mac": "72:00:0a:0b:0c:0d",
                            "name": "client-ep-1"
                        }
                    ],
                    "name": "mock-guest-1"
                }
            ]
        }
    },
    "include": [
        "syslog/client.shard.cmx"
    ],
    "program": {
        "binary": "TODO(https://fxbug.dev/66956): properly support manifest-only tests"
    },
    "runner": "fuchsia-pkg://fuchsia.com/netemul-runner#meta/netemul-runner.cmx"
}
