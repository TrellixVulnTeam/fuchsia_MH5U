import("//build/components.gni")
import("//build/go/go_library.gni")
import("//build/go/go_test.gni")

go_library("time") {
  name = "go.fuchsia.dev/fuchsia/src/connectivity/network/netstack/time"

  sources = [
    "time.go",
    "time_test.go",
  ]
}

go_test("time_test") {
  gopackages =
      [ "go.fuchsia.dev/fuchsia/src/connectivity/network/netstack/time" ]

  deps = [ ":time" ]
}

fuchsia_unittest_package("netstack-time-gotests") {
  deps = [ ":time_test" ]
}

group("tests") {
  testonly = true
  deps = [ ":netstack-time-gotests" ]
}
