{
    include: [
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/wlandevicemonitor",
    },
    capabilities: [
        {
            protocol: [ "fuchsia.wlan.device.service.DeviceMonitor" ],
        },
    ],
    use: [
        {
            directory: "dev-wlanphy",
            rights: [ "rw*" ],
            path: "/dev/class/wlanphy",
        },
        {
            directory: "dev-wlanif",
            rights: [ "rw*" ],
            path: "/dev/class/wlanif",
        },
        {
            protocol: [
                "fuchsia.cobalt.LoggerFactory",
                "fuchsia.wlan.device.service.DeviceService",
            ],
        },
    ],
    expose: [
        {
            protocol: "fuchsia.wlan.device.service.DeviceMonitor",
            from: "self",
        },
    ],
}
