{
    include: [
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/bt_avrcp",
    },
    capabilities: [
        {
            protocol: [
                "fuchsia.bluetooth.avrcp.PeerManager",
                "fuchsia.bluetooth.avrcp.test.PeerManagerExt",
            ],
        },
    ],
    use: [
        {
            protocol: "fuchsia.bluetooth.bredr.Profile",
            from: "parent",
        },
    ],
    expose: [
        {
            protocol: [
                "fuchsia.bluetooth.avrcp.PeerManager",

                // TODO(fxbug.dev/86390): `PeerManagerExt` is a testonly capability. It should not
                // be exposed to the system. Remove this once it is only exposed in testing
                // scenarios.
                "fuchsia.bluetooth.avrcp.test.PeerManagerExt",
            ],
            from: "self",
        },
    ],
}
