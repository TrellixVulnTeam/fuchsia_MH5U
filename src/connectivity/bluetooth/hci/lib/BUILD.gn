import("//build/components.gni")
import("//build/rust/rustc_staticlib.gni")

rustc_staticlib("bt-hci") {
  output_name = "bt_hci"
  with_unit_tests = true

  deps = [
    "//src/connectivity/bluetooth/hci/lib:serial_impl_async_wrapper",
    "//src/lib/async-utils",
    "//src/lib/fuchsia-async",
    "//src/lib/fuchsia-runtime",
    "//src/lib/trace/rust:trace",
    "//src/lib/trace/rust:trace-provider",
    "//src/lib/zircon/rust:fuchsia-zircon",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:futures",
    "//third_party/rust_crates:libc",
    "//third_party/rust_crates:parking_lot",
    "//third_party/rust_crates:thiserror",
  ]

  # TODO(fxbug.dev/91768): Fix the leaks and remove this.
  deps += [ "//build/config/sanitizers:suppress-lsan.DO-NOT-USE-THIS" ]

  public = [ "bindings.h" ]

  sources = [
    "src/control_plane.rs",
    "src/error.rs",
    "src/ffi.rs",
    "src/ffi/uart.rs",
    "src/lib.rs",
    "src/log.rs",
    "src/snoop.rs",
    "src/test_utils.rs",
    "src/transport.rs",
    "src/transport/uart.rs",
    "src/transport/uart/parse_util.rs",
    "src/transport/uart/parser.rs",
    "src/worker.rs",
  ]

  configs -= [ "//build/config/rust:allow_unused_results" ]
}

static_library("serial_impl_async_wrapper") {
  sources = [ "serial_impl_async_wrapper.cc" ]

  deps = [
    "//sdk/banjo/fuchsia.hardware.serialimpl.async:fuchsia.hardware.serialimpl.async_banjo_cpp",
    "//src/lib/ddk",
  ]

  configs += [ "//build/config/fuchsia:static_cpp_standard_library" ]
}

fuchsia_unittest_package("bt-hci-lib-tests") {
  deps = [ ":bt-hci_test" ]
}

group("tests") {
  testonly = true
  deps = [ ":bt-hci-lib-tests" ]
}
