{
    include: [
        "syslog/client.shard.cml",
        "syslog/elf_stdio.shard.cml",
    ],
    program: {
        binary: "bin/pkg-server",
    },
    capabilities: [
        {
            // /dev directory is always empty. It's used for device paths that
            // aren't required by the vulkan loader.
            directory: "dev",
            rights: [ "rw*" ],
            path: "/dev",
        },
        {
            directory: "dev-gpu",
            rights: [ "rw*" ],
            path: "/dev-gpu",
        },
        {
            directory: "dev-goldfish-pipe",
            rights: [ "rw*" ],
            path: "/dev-goldfish-pipe",
        },
    ],
    expose: [
        {
            directory: "dev-gpu",
            from: "self",
            rights: [ "rw*" ],
        },
        {
            directory: "dev-goldfish-pipe",
            from: "self",
            rights: [ "rw*" ],
        },
        {
            directory: "dev",
            from: "self",
            as: "dev-goldfish-control",
            rights: [ "rw*" ],
        },
        {
            directory: "dev",
            from: "self",
            as: "dev-goldfish-address-space",
            rights: [ "rw*" ],
        },
        {
            directory: "dev",
            from: "self",
            as: "dev-goldfish-sync",
            rights: [ "rw*" ],
        },
        {
            directory: "dev",
            from: "self",
            as: "dev-gpu-dependency-injection",
            rights: [ "rw*" ],
        },
    ],
}
