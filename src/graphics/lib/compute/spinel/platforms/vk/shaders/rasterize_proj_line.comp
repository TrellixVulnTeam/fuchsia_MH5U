//
// Define the transformation
//

#define SPN_RASTERIZE_PATH_PRIM_TRANSFORM()                                                        \
  /* affine */                                                                                     \
  vec2 b0 = a0 * t_a + t_b[0];                                                                     \
  vec2 b1 = a1 * t_a + t_b[0];                                                                     \
                                                                                                   \
  /* projective */                                                                                 \
  b0 = b0 / (dot(a0, t_b[1]) + 1.0f);                                                              \
  b1 = b1 / (dot(a1, t_b[1]) + 1.0f);

//
// Round the line's control points to subpixel coordinates
//

#define SPN_RASTERIZE_PATH_PRIM_BEGIN()                                                            \
  {                                                                                                \
    vec2 c0 = round(b0);                                                                           \
    vec2 c1 = round(b1);

