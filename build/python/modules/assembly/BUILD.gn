  sources = [
    "__init__.py",
    "assembly_input_bundle.py",
    "common.py",
    "image_assembly_config.py",
    "package_manifest.py",
    "utils.py",
  ]

  library_deps = [
    "//build/python/modules/depfile",
    "//build/python/modules/serialization",
  ]
}
