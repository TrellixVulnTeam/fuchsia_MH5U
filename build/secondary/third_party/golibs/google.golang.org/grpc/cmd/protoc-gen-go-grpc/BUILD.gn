import("//build/go/go_binary.gni")
import("//build/host.gni")

assert(is_host)

go_binary("protoc-gen-go-grpc") {
  gopackage = "google.golang.org/grpc/cmd/protoc-gen-go-grpc"
  deps = [ "//third_party/golibs:google.golang.org/grpc" ]
}

install_host_tools("host") {
  deps = [ ":protoc-gen-go-grpc" ]
  outputs = [ "protoc-gen-go-grpc" ]
}
